@inherits CommonBase
<h3>AddressDetail</h3>

<div class="row">
    <div class="col-12">
        <label for="StreetAddress" class="form-label">Street Address</label>
        <input id="StreetAddress" value="@_address.StreetAddress" />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <label for="StreetAddress2" class="form-label">Street Address 2</label>
        <input id="StreetAddress2" value="@_address.StreetAddress2"/>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <label for="City" class="form-label">City</label>
        <input id="City" value="@_address.City" />
    </div>
    <div class="col-3">
        <label for="State" class="form-label">State</label>
        <input id="State" value="@_address.State"/>
    </div>
    <div class="col-3">
        <label for="PostalCode" class="form-label">Postal Code</label>
        <input id="PostalCode" value="@_address.PostalCode"/>
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <button class="btn btn-primary" onclick="@HandleSaveClick">Save</button>
        <button class="btn btn-danger" onclick="@HandleCancelClick">Cancel</button>
    </div>

</div>